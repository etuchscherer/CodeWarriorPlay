<%= form_for(@project_configuration, html: {class: 'form-horizontal'}) do |f| %>
  <% if @project_configuration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project_configuration.errors.count, "error") %> prohibited this project_configuration from being saved:</h2>

      <ul>
      <% @project_configuration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'col-sm-10 form-control', placeholder: 'My_Awesome_App' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :owner, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
      <%= f.text_field :owner, class: 'col-sm-10 form-control', placeholder: 'Github_User_Name' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :source, class: 'col-sm-10 form-control', placeholder: 'https://github.com/me/my_awesome_app.git' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :destination, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :destination, class: 'col-sm-10 form-control', placeholder: '/opt/onTrack/project/my_awesome_app' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :enabled %> Enable Project
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-large btn-success' %>
    </div>
  </div>
<% end %>
